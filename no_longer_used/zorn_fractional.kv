## zorn.kv
#:import colours magic_palette_fractional

## This forces Spinner Value strings to wrap text in the dropdown,
## gives it a bit of left margin, and centers it vertically.
## It's pulled into all ColourXXSpinner widgets using the option_cls variable.
<MySpinnerOption@SpinnerOption>:
	text_size: self.width - 10, None
	size_hint: self.height, None
	height: 70


<ColourChip>:
	text: ""
	text_size: self.size
	size_hint: None, None
	halign: "center"
	width: 100
	height: 100
	dynamic_colour: [0.952941176, 0.956862745, 0.968627451, 1.0] ## Titanium White
	
	canvas.before:
		Color:
			rgba: self.dynamic_colour
		Rectangle:
			pos: self.pos
			size: self.size


<ZornGridLayout>:
	rows: 7
	cols: 6

	##################### ROW 1 ##################
	BoxLayout: ## COLUMN 4
		orientation: 'vertical'
		size_hint: None, None
		width: 100
		height: 100
		NewButton:
			id: new_button
			text: "New"
			size_hint: None, None
			width: 100
			height: 50
			on_release: self.create_new()
		LoadButton:
			id: load_button
			text: "Load"
			size_hint: None, None
			width: 100
			height: 50
			on_release: self.load_palette()

	BoxLayout: ## COLUMN 5
		orientation: 'vertical'
		size_hint: None, None
		width: 100
		height: 100
		SaveButton:
			id: save_button
			text: "Save"
			size_hint: None, None
			width: 100
			height: 50
			on_release: self.save_palette()
		SaveAsButton:
			id: save_as_button
			text: "Save As..."
			size_hint: None, None
			width: 100
			height: 50
			on_release: self.save_palette_as()

	Mix01Spinner: ## COLUMN 2
		id: mix_01_spinner
		text: "Tint 1"
		text_size: self.width, None ## forces text to wrap on the Spinner header
		values: reversed(colours.ColourLookUp)
		option_cls: "MySpinnerOption" ## see <MySpinnerOption> at top of file
		size_hint: None, None
		size: 100, 100
		pos_hint: {'left': 1, 'top': 1}

		on_text:
			self.set_spinner_chip(self.text, mix_01)
			root.calculate_colours()


	Mix02Spinner: ## COLUMN 2
		id: mix_02_spinner
		text: "Tint 2"
		text_size: self.width, None ## forces text to wrap on the Spinner header
		values: reversed(colours.ColourLookUp)
		option_cls: "MySpinnerOption" ## see <MySpinnerOption> at top of file
		size_hint: None, None
		size: 100, 100
		pos_hint: {'left': 1, 'top': 1}

		on_text:
			self.set_spinner_chip(self.text, mix_02)
			root.calculate_colours()

	Colour01Spinner: ## COLUMN 3
		id: colour_01_spinner
		text: "Colour 1"
		text_size: self.width, None ## forces text to wrap on the Spinner header
		values: colours.ColourLookUp
		option_cls: "MySpinnerOption" ## see <MySpinnerOption> at top of file
		size_hint: None, None
		size: 100, 100
		pos_hint: {'x': 0, 'top': 1}

		on_text:
			self.set_spinner_chip(self.text, colour_01)
			root.calculate_colours()

	Colour02Spinner: ## COLUMN 7
		id: colour_02_spinner
		text: "Colour 2"
		text_size: self.width, None ## forces text to wrap on the Spinner header
		values: colours.ColourLookUp
		option_cls: "MySpinnerOption" ## see <MySpinnerOption> at top of file
		size_hint: None, None
		size: 100, 100
		pos_hint: {'right': 1, 'top': 1}

		on_text:
			self.set_spinner_chip(self.text, colour_02)
			root.calculate_colours()
	
	##################### ROW 2 ##################
	BoxLayout: ## COLUMN 6
		orientation: 'vertical'
		size_hint: None, None
		width: 100
		height: 100
		ReloadButton:
			id: reload_button
			text: "Reload"
			size_hint: None, None
			width: 100
			height: 50
			on_release: self.reload()
		QuitButton:
			id: quit_button
			text: "Quit"
			size_hint: None, None
			width: 100
			height: 50
			on_release:
				self.clean_up()
				app.exit_check()

